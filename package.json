{
  "name": "federalist-uswds-jekyll",
  "version": "0.9.0",
  "description": "Federalist using USWDS+Jekyll",
  "main": "src/js/app.js",
  "scripts": {
    "build": "npm run build:uswds; npm run build:js; npm run build:css; npm run build:jekyll",
    "build:css": "cp -R src/css/* assets/css/;",
    "build:jekyll": "bundle exec jekyll build",
    "build:js": "cp -R src/js/* assets/js/",
    "build:uswds": "mkdir -p assets; cp -R node_modules/uswds/dist/* assets/",
    "clean": "rm -rf assets/; rm -rf _site",
    "federalist": "npm run build:uswds; npm run build:js; npm run build:css",
    "postinstall": "bundle install",
    "start": "bundle exec jekyll serve",
    "test": "bundle exec htmlproofer _site"
  },
  "author": "",
  "license": "CC0-1.0",
  "dependencies": {
    "uswds": "^2.0.0-beta.4"
  }
}
